{
  "name": "hotel_booking_app",
  "version": "1.0.0",
  "description": "Hotel booking application with Fastify and Turso DB",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed": "ts-node src/migrations/seed.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:dev": "drizzle-kit migrate --schema=src/models/schema.ts",
    "db:migrate:dev:generate": "drizzle-kit migrate:dev --schema=src/models/schema.ts"
  },
  "keywords": [
    "hotel",
    "booking",
    "fastify",
    "turso",
    "drizzle",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@firebase/auth": "^1.10.4",
    "@libsql/client": "^0.4.0-pre.7",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.38.2",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "fastify-zod": "^1.4.0",
    "firebase": "^11.7.3",
    "firebase-admin": "^13.0.2",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "razorpay": "^2.9.2",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.1",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.30.1",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
